<div class="masonry-item">
  <div class="panel panel-info">
    <div class="panel-heading">
      <%= render "shared/status_label", status: get_subject_status(subject) %>
      <%= subject.name %>
    </div>
    <div class="panel-body">
      <%= subject.instructions %>
    </div>
    <div class="panel-footer">
      <% if get_user_subject subject %>
        <%= link_to subject_path(subject), class: "btn btn-primary" do %>
          <i class="glyphicon glyphicon-search"></i>
          <%= t "courses.btnView" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
