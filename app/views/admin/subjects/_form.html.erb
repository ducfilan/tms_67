<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages", object: @subject %>
    <%= form_for [:admin, @subject] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :instructions %>
          <%= f.text_field :instructions, class: "form-control" %>
        </div>
        <%= f.fields_for :tasks do |builder| %>
          <%= render "admin/shared/task_fields", f: builder %>
        <% end %>
        <p><%= link_to_add_fields t("admin.subjects.new_task"), f, :tasks %></p>
        <%= f.submit (t ".submit_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
