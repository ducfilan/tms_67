<header class="navbar navbar-default">
  <div id="banner_wrapper">
    <%= image_tag "banner.png" %>
    <div id="banner_text_wrapper">
      <h1 id="system_banner_text"><%= t("system_name").upcase %></h1>
      <h2 id="system_banner_slogan"><%= t "slogan" %></h2>
    </div>
  </div>
  <div class="container">
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to root_path, title: t("home"), id: "logo" do %>
            <%= image_tag "logo_F.png", class: "img-circle" %>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("manager_user"), admin_users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t("manager_course") %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.courses.new_course"), new_admin_course_path %></li>
                <li><%= link_to t("admin.courses.all_courses"), admin_courses_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t("manager_subject") %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.subjects.new"), new_admin_subject_path %></li>
                <li><%= link_to t("admin.subjects.all"), admin_subjects_path %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("nav_bar.courses"), courses_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), current_user.admin? ?
                [:admin, current_user] : current_user %></li>
              <li><%= link_to t(:edit_user), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("login"), login_path, class: "btn btn-default" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

